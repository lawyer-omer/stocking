<h2 style="width: 36rem; margin:0 auto;">Sign up</h2>

<div class="card" style="width: 36rem; margin:0 auto;">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"example@gmail.com" %>
      </div>
    
      <div class="field form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"********" %>
      </div>
    
      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"********" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
<br>

<div style="width: 36rem; margin:0 auto;">
  <%= render "devise/shared/links" %>
</div>