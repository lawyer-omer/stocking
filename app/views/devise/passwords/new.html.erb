<div class="card" style="width: 24rem; margin:0 auto;">

  <div class="card-body">


    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <br>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "E-mail" %>
      </div>

      <br>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", type: "button", class: "btn btn-outline-dark" %>
      </div>
    <% end %>

    <br>

    <%= render "devise/shared/links" %>

  </div>
</div>
